generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  password   String
  Purchases  Purchases[]
  Sessions   Sessions[]
  UserImages UserImages?
  userPhones UserPhones? @relation("userPhonesTousers")

  @@map("users")
}

model Sessions {
  id           Int    @id @default(autoincrement())
  userId       Int
  refreshToken String @unique
  accessToken  String @unique
  users        Users  @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model Supermarkets {
  id              Int               @id @default(autoincrement())
  name            String            @unique
  ProductsMarkets ProductsMarkets[]

  @@map("supermarkets")
}

model Products {
  id              Int               @id @default(autoincrement())
  name            String            @unique
  urlImage        String            @unique
  ProductsMarkets ProductsMarkets[]
  purchases       Purchases[]       @relation("productsTopurchases")

  @@map("products")
}

model UserImages {
  id       Int    @id @default(autoincrement())
  userId   Int    @unique
  urlImage String
  user     Users  @relation(fields: [userId], references: [id])

  @@map("userImages")
}

model ProductsMarkets {
  id            Int          @id @default(autoincrement())
  productId     Int
  supermarketId Int
  price         Float
  product       Products     @relation(fields: [productId], references: [id])
  supermarket   Supermarkets @relation(fields: [supermarketId], references: [id])

  @@map("productsMarkets")
}

model Purchases {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  products  Products @relation("productsTopurchases", fields: [productId], references: [id])
  user      Users    @relation(fields: [userId], references: [id])

  @@map("purchases")
}

model UserPhones {
  id     Int    @id @default(autoincrement())
  userId Int    @unique
  phone  String
  users  Users  @relation("userPhonesTousers", fields: [userId], references: [id])

  @@map("userPhones")
}
